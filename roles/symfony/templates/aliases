# Alias's to change the directory
alias www='cd {{ web_dir }}'

# Symfony aliases
alias sf="php {{ web_dir }}/bin/console"
alias sfcache="sf cache:clear"
alias sff="rm -rf {{ web_dir }}/var/cache/*"

# Composer aliases
alias compr="composer require"
alias comprd="composer require-dev"
alias compi="composer install"
# regenerate namespaces
alias compda="composer dump-autoload"

# Npm aliases
alias yn="yarn"
alias yw="yarn watch"
alias yt="yarn test"
alias yl="yarn lint"